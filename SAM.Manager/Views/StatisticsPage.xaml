<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SAM.Manager.Views.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SAM.Manager.Views"
    xmlns:models="using:SAM.Core.Models"
    NavigationCacheMode="Disabled">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock x:Name="GameNameText"
                           Text="Statistiken" 
                           Style="{StaticResource TitleLargeTextBlockStyle}"/>
                <TextBlock x:Name="GameSubtitleText"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Account:" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="AccountComboBox"
                          Width="220"
                          SelectionChanged="AccountComboBox_SelectionChanged"/>
            </StackPanel>
        </Grid>

        <!-- Command Bar -->
        <CommandBar Grid.Row="1" 
                    DefaultLabelPosition="Right"
                    Background="Transparent">
            <AppBarButton x:Name="RefreshButton"
                          Icon="Refresh" 
                          Label="Aktualisieren"
                          Click="RefreshButton_Click"/>
            <AppBarButton x:Name="SaveButton"
                          Icon="Save" 
                          Label="Speichern"
                          Click="SaveButton_Click">
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="S"/>
                </AppBarButton.KeyboardAccelerators>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:Name="ResetAllButton"
                          Label="Alle zur체cksetzen"
                          Click="ResetAllButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE74D;"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </CommandBar>

        <!-- Stats + Graph -->
        <Grid Grid.Row="2" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Stats List -->
            <ListView x:Name="StatsListView"
                      SelectionMode="Single"
                      SelectionChanged="StatsListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,4">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Stat Info -->
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Id}" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               IsTextSelectionEnabled="True"/>
                                </StackPanel>

                                <!-- Value Input -->
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <TextBox Text="{Binding StringValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                             Width="180"
                                             HorizontalAlignment="Right"
                                             Loaded="ValueTextBox_Loaded"/>
                                </Grid>

                                <!-- Before/After -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="Alt:"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{Binding OriginalStringValue}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Neu:"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{Binding StringValue}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                </StackPanel>

                                <!-- Warning + Modified Indicator -->
                                <StackPanel Grid.Column="3" VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="6"
                                                Visibility="{Binding HasWarning, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE7BA;" 
                                                  Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                                  FontSize="14"/>
                                        <TextBlock Text="{Binding WarningMessage}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                    </StackPanel>
                                    <Border Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            Visibility="{Binding IsModified, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Ge채ndert" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                    </Border>
                                </StackPanel>

                                <!-- Reset Button -->
                                <Button Grid.Column="4"
                                        Content="&#xE777;"
                                        FontFamily="Segoe Fluent Icons"
                                        Width="32" Height="28"
                                        VerticalAlignment="Center"
                                        IsEnabled="{Binding IsModified}"
                                        Click="ResetStatButton_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- History Graph -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12">
                <StackPanel Spacing="8">
                    <TextBlock x:Name="HistoryTitleText"
                               Text="Verlauf"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <Canvas x:Name="HistoryCanvas"
                            Height="180"
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            SizeChanged="HistoryCanvas_SizeChanged"/>
                    <TextBlock x:Name="HistoryEmptyText"
                               Text="Kein Verlauf f체r diesen Stat"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <InfoBar x:Name="StatusInfoBar"
                 Grid.Row="3"
                 IsOpen="False"
                 Severity="Informational"
                 Title="Status"/>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="4"
              Visibility="Collapsed"
              Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="16">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Statistiken werden geladen..." 
                           Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Empty State -->
        <StackPanel x:Name="EmptyState"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <FontIcon Glyph="&#xE9D9;" FontSize="64" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="Keine Statistiken verf체gbar" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
            <TextBlock Text="Dieses Spiel hat keine bearbeitbaren Statistiken."
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
